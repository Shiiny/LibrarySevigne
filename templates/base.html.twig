        <header class="cs__header">
            <a class="cs__header__logo" href="{{ path('home') }}">
                <img id="logo" src="{{ asset('/img/Logo.png') }}" alt="Logo Collège Sévigné">
            </a>

            <button class="cs__header__burger" type="button" aria-label="Navigation">
                <span class="cs__header__burger-icon"></span>
            </button>

            <nav class="cs__header__nav">
                <ul class="cs__menu">
                    {# if is_granted('ROLE_USER') #}
                        {# if is_granted('ROLE_ADMIN') #}
