                                <a class="cs__menu-link" href="{{ path('admin.home') }}">Tableau de bord</a>
                            </li>
                        {# endif #}
                        <li class="cs__menu-item">
                            <a class="cs__menu-link icon-profil" href="#profile">Bienvenue  app.user.username|upper }}</a>
                        </li>
                        <li class="cs__menu-item">
                            <a class="cs__menu-link icon-logout" href="{{ path('security.logout') }}">Déconnexion</a>
                        </li>
                    {# else #}
                        <li class="cs__menu-item">
                            <a class="cs__menu-link icon-login" href="{{ path('security.login') }}">Connexion / Inscription</a>
                        </li>
                    {# endif #}
                </ul>
            </nav>

            {% block search %}
                <div class="cs__baseline">
                    <div class="cs__content__search">
                        <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10">
                            <div class="cs__content__search-title">
                                <div class="cs__search__picto col-md-3 col-sm-4">
                                    <img class="cs__picto" src="{{ asset('img/picto_CS.png') }}" alt="picto Collège Sévigné">
                                </div>
                                <div class="col-sm-9">
                                    <h1 class="cs__title_site">Bibliothèque Numérique</h1>
                                </div>
                            </div>
                            <form action=" path('search') }}" method="GET">
                                <div class="input-group">
                                    <input type="text" name="param" class="form-control" aria-label="Rechercher" aria-describedby="basic-addon" placeholder="Rechercher...">
                                    <div class="input-group-append">
                                        <button type="submit" class="input-group-text" id="basic-addon">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    {% block app_img %}
                        <img class="cs__front-blue" src="{{ asset('img/front_blue.jpg') }}" alt="accueil">
                    {% endblock %}
                </div>
            {% endblock %}

        </header>


