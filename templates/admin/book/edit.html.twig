{% extends 'admin/base.html.twig' %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('admin.book.index') }}">Tous les cours</a>
    </li>
    <li class="breadcrumb-item active">Éditer un cours</li>
{% endblock %}

{% block content %}
    <div class="card mb-3">
        <h2 class="card-header">Éditer un Cours</h2>
        <div class="card-body">
            {{ include ('admin/book/_form.html.twig', {form: form, button: 'Enregistrer'}) }}
        </div>
        <div class="card-footer small text-muted">Actualisé le : {{ "now"|localizeddate('long', 'none') }}</div>
    </div>
{% endblock %}


