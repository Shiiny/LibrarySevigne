{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-4 mb-4">
            <div class="cs__sidebar">
                <div class="cs__sidebar__title">
                    {# block sidebar_title #}<h3>Sélectionnez une rubrique</h3>{# endblock #}
                </div>
                <div class="cs__sidebar__content">
                    <!-- item Catégorie -->
                    <div id="categorie" class="cs__sidebar__accordion__rubrique">
                        <a href="#collapse01" data-toggle="collapse" data-parent="cs__sidebar__accordion" title="Catégories" class="accordion-toggle" aria-selected="true" aria-expanded="true" aria-controls="collapse01">
                            <div class="cs__sidebar__accordion__content">
                                <div class="cs__sidebar__accordion__heading">
                                    <h4 class="cs__sidebar__accordion__title">CATEGORIES <i class="fas fa-chevron-up pull-right"></i></h4>
                                </div>
                            </div>
                        </a>
                        <div id="collapse01" class="collapse show" aria-hidden="false" tabindex="0">
                            <ul class="cs__sidebar__accordion__list">
                                {# block sidebar_categories #}
                                    {# for category in sidebar.categories #}
                                        <li {# if category == app.request.get('category') #} class="search-active" {# endif #}>
                                            <a href=" path('catalog', {category: category }) }}" title=""> category }}</a>
                                        </li>
                                    {# endfor #}
                                {# endblock #}
                            </ul>
                        </div>
                    </div>
                    <!-- item Auteur -->
                    <div id="profs" class="cs__sidebar__accordion__rubrique">
                        <a href="#collapse02" data-toggle="collapse" data-parent="cs__sidebar__accordion" title="Auteurs" class="accordion-toggle" aria-selected="true" aria-expanded="true" aria-controls="collapse02">
                            <div class="cs__sidebar__accordion__content">
                                <div class="cs__sidebar__accordion__heading">
                                    <h4 class="cs__sidebar__accordion__title">AUTEURS <i class="fas fa-chevron-up pull-right"></i></h4>
                                </div>
                            </div>
                        </a>
                        <div id="collapse02" class="collapse show" aria-hidden="false">
                            <ul class="cs__sidebar__accordion__list">
                                {# block sidebar_profs #}
                                    {# for author in sidebar.authors #}
                                        <li {# if author == app.request.get('author') #} class="search-active" {# endif #}>
                                            <a href=" path('catalog', {author: author }) }}" title=""> author }}</a>
                                        </li>
                                    {# endfor #}
                                {# endblock #}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- /Sidebar -->

        <div class="maincontent col-md-8 mb-4">
            {% if books is not empty %}
                {% block main_title %}{% endblock %}
                <div class="cs__resultBar">
                    <p>Tous les cours : {{ books.getTotalItemCount }}</p>
                    <div class="cs__pagination">
                        <nav aria-label="Pagination">
                            {{ knp_pagination_render(books) }}
                        </nav>
                    </div>
                </div>
                {% for book in books %}
                    <div class="cs__card">
                        <div class="cs__card__container">
                            <figure class="cs__card__thumbnail col-sm-4">
                                <img src="http://placehold.it/350x150" class="cs__img" alt="">
                            </figure>
                            <div class="cs__card__book col-sm-8">
                                <h3 class="cs__card__title"><a href="{{ path('book.show', {id: book.id, slug: book.slug}) }}">{{ book.title }}</a></h3>
                                <span class="cs__card__tag">{{ book.category.title }}</span>
                                <div class="cs__card__subinfo">
                                    <p class="col-8 info-text">Auteur : {{ book.authorFirstname }} {{ book.authorLastname }}</p>
                                    <p class="col-4 info-text date">Année : {{ book.yearBook }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                <div class="cs__pagination">
                    <nav aria-label="Pagination">
                        {{ knp_pagination_render(books) }}
                    </nav>
                </div>
            {% else %}
                <p>Aucun résultat</p>
            {% endif %}
        </div>

    </div>
{% endblock %}